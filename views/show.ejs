<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head'); %> 
    <link rel="stylesheet" href="/stylesheet.css">
</head>
<header>
  <%- include('partials/header'); %> 
</header>

<body>
  <div class="contianer">
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-5 my-5">
        <div class="card mb-3" >
          <div class="ratio ratio-16x9">
            <img src="<%= recipe.img %> " class="card-img-top" alt="...">
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= recipe.name %> </h5>
            <p class="card-text"><%= recipe.description %> </p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
        </div>        
      </div> 
      <div class="col-md-5 my-5"> 
        <h2 class="text-center">Ingredients</h2>          
        <div class="mb-3">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <%=recipe.ingredients.flour.amountOfFlour%>g <%=recipe.ingredients.flour.typeOfFlour%> flour
            </li>
            
            <li class="list-group-item">
              <%= recipe.ingredients.water %>g Water
            </li>


            <% if (recipe.ingredients.salt === null) { %> 
              <% } else { %>
                <li class="list-group-item">
                  <%= recipe.ingredients.salt %>g Salt 
                </li>
            <% } %>
          

            <% if (recipe.ingredients.yeast.amountOfYeast === null) { %> 
              <% } else { %>
              <li class="list-group-item">
                <%= recipe.ingredients.yeast.amountOfYeast %>g<%= recipe.ingredients.yeast.typeOfYeast%> yeast
              </li>
            <% } %>


            <% if (recipe.ingredients.oil.amountOfOil === null) { %> 
              <% } else { %>
                <li class="list-group-item">
                  <%=recipe.ingredients.oil.amountOfOil%>g <%= recipe.ingredients.oil.typeOfOil%> oil
                </li>
            <% } %>
          

            <% if (recipe.ingredients.sugar === null) { %> 
              <% } else { %>
                <li class="list-group-item">
                  <%=recipe.ingredients.sugar%>g Sugar
                </li>
            <% } %>
        

            <% if (recipe.ingredients.milk_msub === null) { %> 
              <% } else { %>
                <li class="list-group-item">
                  <%=recipe.ingredients.milk_msub%>g Milk/Milk Substitute
                </li>
            <% } %>
            

            <li class="list-group-item">
              <%=recipe.otherIngredients%>Other Ingredients:
            </li>
          </ul>
        </div>
        <form action="/bread/<%=recipe.id %>?_method=DELETE" method="POST">
          <input type="submit" onclick="return confirm('Are you sure you want to delete this Knead?')" class="mt-auto btn btn-danger" value="Knead to Delete"> 
          <a href="/bread/<%=recipe.id%>%>/edit" type="button" class="mt-auto btn btn-primary">Knead to Edit</a>
        </form>
        
      </div>
      <div class="col-md-1"></div>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-10">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Instructions</h5>
            <p class="card-text"><%= recipe.instructions%> </p>
            <a href="/bread/<%=recipe.id%> " class="btn btn-primary">Top of the Knead</a>
          </div>
        </div>
      </div>
    </div>
  </div>

    <%- include('partials/body'); %>  
    <%- include('partials/footer'); %>    
</body>
</html>



